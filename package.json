{
    "name": "doz",
    "version": "4.0.0",
    "description": "A JavaScript framework for building UI, almost like writing in VanillaJS.",
    "main": "dist/doz.js",
    "type": "module",
    "module": "src/index.js",
    "sideEffects": false,
    "typings": "types/index.d.ts",
    "scripts": {
        "preversion": "npm run-script test && npm run-script build && git commit -a -m BUILD",
        "postversion": "npm publish && git push --follow-tags",
        "release:major": "npm version major",
        "release:minor": "npm version minor",
        "release:patch": "npm version patch",
        "build": "rollup --config rollup.config.js",
        "test": "mocha test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dozjs/doz.git"
    },
    "keywords": [
        "front-end",
        "html",
        "dom",
        "javascript",
        "framework",
        "ui",
        "virtual dom",
        "v-dom",
        "component",
        "plugin",
        "mixin",
        "proxy",
        "hooks",
        "pre-render",
        "server side rendering",
        "ssr",
        "component-based",
        "webcomponent",
        "tagged-template-literals",
        "template-literals"
    ],
    "author": "Fabio Ricali",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dozjs/doz/issues"
    },
    "homepage": "https://github.com/dozjs/doz#readme",
    "devDependencies": {
        "bejs": "^2.0.1",
        "chai": "^4.3.6",
        "doz-router": "^1.8.1",
        "global-jsdom": "^8.4.0",
        "jsdom": "^19.0.0",
        "mocha": "^10.0.0",
        "rollup": "^2.79.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-version-injector": "^1.3.3",
        "typescript": "^3.1.1"
    },
    "mocha": {
        "require": [
            "global-jsdom/register"
        ],
        "timeout": 5000,
        "slow": 4000,
        "exit": true
    }
}
